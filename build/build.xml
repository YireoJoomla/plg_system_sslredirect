<?xml version="1.0" encoding="UTF-8"?>
<project name="SSLRedirect" default="build" basedir=".">

    <!-- General variable definitions -->
    <exec command="date +%Y-%m-%d" outputProperty="date" />
    <exec command="cd ../;pwd" outputProperty="root" />

    <property name="packages" value="${root}/packages" />
    <property name="joomla15" value="${root}/joomla15" />
    <property name="joomla25" value="${root}/joomla25" />
    <property name="gpl" value="${root}/build/gpl-3.0.txt" />

    <!-- Public Target: build -->
    <target name="build" description="Build all Joomla! packages">
        <phingcall target="build_joomla15_plugin" />
        <phingcall target="build_joomla25_plugin" />
    </target>

    <!-- Target: build_joomla15_plugin -->
    <target name="build_joomla15_plugin">

        <property name="joomla15_package_dir" value="${root}/build/tmp/joomla15" />
        <exec command="cat ${joomla15}/plugins/system/sslredirect.xml|grep /version|sed 's/[^0-9\.]*//g'" outputProperty="version" />
        <exec command="mkdir -p ${joomla15_package_dir}" />

        <copy todir="${joomla15_package_dir}">
            <fileset dir="${joomla15}/plugins/system">
                <include name="sslredirect.*" />
                <include name="sslredirect/**" />
            </fileset>
        </copy>
        <copy file="${gpl}" tofile="${joomla15_package_dir}/LICENSE.txt" overwrite="true" />

        <exec command="rm ${packages}/plg_sslredirect_${version}_j15.zip" />
        <zip destfile="${packages}/plg_sslredirect_${version}_j15.zip">
            <fileset dir="${joomla15_package_dir}">
                <include name="**" />
            </fileset>
        </zip>
        <copy file="${packages}/plg_sslredirect_${version}_j15.zip" tofile="${packages}/plg_sslredirect_j15.zip" overwrite="true" />

        <exec command="rm ${packages}/plg_sslredirect_${version}_j15.tgz" />
        <tar destfile="${packages}/plg_sslredirect_${version}_j15.tgz" compression="gzip">
            <fileset dir="${joomla15_package_dir}">
                <include name="**" />
            </fileset>
        </tar>
        <copy file="${packages}/plg_sslredirect_${version}_j15.tgz" tofile="${packages}/plg_sslredirect_j15.tgz" overwrite="true" />
    </target>

    <!-- Target: build_joomla25_plugin -->
    <target name="build_joomla25_plugin">

        <property name="joomla25_package_dir" value="${root}/build/tmp/joomla25" />
        <exec command="cat ${joomla25}/plugins/system/sslredirect/sslredirect.xml|grep /version|sed 's/[^0-9\.]*//g'" outputProperty="version" />
        <exec command="mkdir -p ${joomla25_package_dir}" />

        <copy todir="${joomla25_package_dir}" haltonerror="false">
            <fileset dir="${joomla25}/plugins/system/sslredirect">
                <include name="**" />
            </fileset>
            <fileset dir="${joomla25}/administrator/language/en-GB">
                <include name="en-GB.plg_system_sslredirect.ini" />
                <include name="en-GB.plg_system_sslredirect.sys.ini" />
            </fileset>
        </copy>
        <copy file="${gpl}" tofile="${joomla25_package_dir}/LICENSE.txt" overwrite="true" />

        <exec command="rm ${packages}/plg_sslredirect_${version}_j25.zip" />
        <zip destfile="${packages}/plg_sslredirect_${version}_j25.zip">
            <fileset dir="${joomla25_package_dir}">
                <include name="**/**" />
            </fileset>
        </zip>
        <copy file="${packages}/plg_sslredirect_${version}_j25.zip" tofile="${packages}/plg_sslredirect_j25.zip" overwrite="true" />

        <exec command="rm ${packages}/plg_sslredirect_${version}_j25.tgz" />
        <tar destfile="${packages}/plg_sslredirect_${version}_j25.tgz" compression="gzip">
            <fileset dir="${joomla25_package_dir}">
                <include name="**/**" />
            </fileset>
        </tar>
        <copy file="${packages}/plg_sslredirect_${version}_j25.tgz" tofile="${packages}/plg_sslredirect_j25.tgz" overwrite="true" />
    </target>

</project>

